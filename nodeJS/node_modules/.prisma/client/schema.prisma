// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  slug      String   @unique
  likes     Int      @default(0)
  views     Int      @default(0)
  category Category @relation(fields: [categoryId],references: [id])
  categoryId String
  // tag Tag @relation(fields: [tagId],references: [id])
  // tagId String[]
  tags Tag[]
  
}

model Category {
  id String @id @default(uuid())
  slug String @default("")
  name String @unique
  orderIndex Int @default(0)
  posts Post[]
  tags Tag[]
}

model Tag {
  id String @id @default(uuid())
  slug String @default("")
  name String @unique
  // posts Post[]
  posts Post[] 
  category Category @relation(fields: [categoryId],references: [id])
  categoryId String
}

